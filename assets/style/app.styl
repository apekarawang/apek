@import '../../node_modules/github-markdown-css/github-markdown.css';
.markdown-body
  box-sizing: border-box
  min-width: 200px
  max-width: 980px
  margin: 0 auto
  padding: 45px
  font-family: 'Roboto'
  color: inherit

@media (max-width: 767px) {
  .markdown-body {
    padding: 15px;
  }
}

$color-pack = false;
@require '~vuetify/src/stylus/app.styl'

body
  -webkit-font-smoothing: antialiased

.toolbar__items >
  .btn
    &:hover:not(.btn--active)
    // &:focus
      border-bottom: 0.2rem solid #221122
      .btn__content:before
        background-color: transparent
    &--active
      border-bottom: 0.2rem solid #F44336

.bgx
  background-image: linear-gradient(322deg,#da2b2b 20%,#000000 78%)

.color-inherit
  color: inherit
  background-color: inherit
